@model IEnumerable<CDStudent.Models.Student>

    @Html.ActionLink("Add Student","Create","Stud")
    <table class="table">
        <tr>
            <th>@Html.DisplayNameFor(m=>m.Id)</th>
            <th>@Html.DisplayNameFor(m=>m.Name)</th>
            <th>@Html.DisplayNameFor(m=>m.Address)</th>
            <th>@Html.DisplayNameFor(m=>m.PhoneNo)</th>
            <th>@Html.DisplayNameFor(m=>m.JoinDate)</th>
        </tr>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name
                    <td>@item.Address</td>
                    <td>@item.PhoneNo</td>
                    <td>@item.JoinDate</td>
                    
                    <td><a asp-controller="Studentes" asp-action="Edit" asp-route-id="@item.Id"/>Edit</td>
                    <td><a asp-controller="Studentes" asp-action="Delete" asp-route-id="@item.Id"/>Delete</td>
                </tr>
                
            }
        </tbody>
    </table>